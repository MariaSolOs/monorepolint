    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "jest": "^29.3.1",
    "prettier": "^2.8.0",
    "ts-jest": "^29.0.3",
    "tsup": "^6.5.0",
    "typescript": "^4.9.3",
    "tslib": "^2.4.1"
  },
  "publishConfig": {
    "access": "public"
