{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "composite": true,
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "references": [
    {
      "path": "../cli"
    },
    {
      "path": "../core"
    },
    {
      "path": "../expect-file-contents"
    },
    {
      "path": "../expect-standard-tsconfig"
    },
    {
      "path": "../expect-package-script"
    },
    {
      "path": "../utils"
    }
  ]
}
